//Verificación de Vocal

#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
    string entrada;
    cout << "Ingresa una letra: ";
    cin >> entrada;
    
    if (entrada.length() != 1) {
        cout << "No se puede procesar el dato. Ingresaste un string de más de un carácter." << endl;
    } else {
        char letra = tolower(entrada[0]);
        if (letra == 'a' || letra == 'e' || letra == 'i' || letra == 'o' || letra == 'u') {
            cout << "Es vocal" << endl;
        } else {
            cout << "Es una consonante." << endl;
        }
    }
    return 0;
}
