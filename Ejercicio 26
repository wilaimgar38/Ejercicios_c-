//Escribí una función llamada sumatoriaDigitos que reciba como parámetro un número y retorne la suma de todos sus dígitos,
//reutilizando la estrategia utilizada en el ejercicio 36. Finalmente, escribir un algoritmo que solicite al usuario ingresar varios números hasta que ingrese el número 100, 
//con el cual cortará la repetición. Por cada número, mostrar la suma de sus dígitos, para lo cual se llamará a la función sumatoriaDigitos.

#include <iostream>
#include <cmath>

using namespace std;

int sumatoriaDigitos(int n) {
    if (n < 0) {
        n = abs(n);
    }
    if (n == 0) {
        return 0;
    }
    
    int suma = 0;
    while (n > 0) {
        suma += n % 10;
        n /= 10;
    }
    return suma;
}

int main() {
    int numero;
    
    cout << "--- Suma de Dígitos por Número ---" << endl;
    cout << "Ingresa números (100 para finalizar):" << endl;
    
    while (true) {
        cout << "Número: ";
        if (!(cin >> numero)) {
            cout << "Error: Ingreso no válido. Finalizando." << endl;
            break;
        }
        
        if (numero == 100) {
            break;
        }
        
        int suma = sumatoriaDigitos(numero);
        cout << "  -> Suma de sus dígitos: " << suma << endl;
    }
    
    cout << "\nProceso finalizado al ingresar el número 100." << endl;
    return 0;
}
