//Menor de Tres Números 

#include <iostream>
#include <algorithm>
using namespace std; 

int main() {
    double num1, num2, num3;
    cout << "Ingresa el primer número: ";
    cin >> num1;
    cout << "Ingresa el segundo número: ";
    cin >> num2;
    cout << "Ingresa el tercer número: ";
    cin >> num3;
    
    double menor = num1;
    if (num2 < menor) {
        menor = num2;
    }
    if (num3 < menor) {
        menor = num3;
    }
    
    cout << "El menor de los tres números es: " << menor << endl;
    return 0;
}
