//Contador de Vocales en una Frase

#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
    string frase;
    int contador_vocales = 0;
    
    cout << "Ingresa una frase: ";
    getline(cin, frase); 
    
    for (char caracter : frase) {
        char minuscula = tolower(caracter);
        
        if (minuscula == 'a' || minuscula == 'e' || minuscula == 'i' || minuscula == 'o' || minuscula == 'u') {
            contador_vocales++;
        }
    }
    
    cout << "La frase contiene " << contador_vocales << " vocales." << endl;
    return 0;
}
