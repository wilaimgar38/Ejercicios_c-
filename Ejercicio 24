//Conteo de Dígitos por Línea de Títulos de Libros

#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
    string titulo;
    int lineas_completas = 0;
    int digitos_en_linea = 0;
    
    cout << "--- Ingreso de Títulos de Libros ---" << endl;
    cout << "Ingresa títulos (* para finalizar, / para terminar línea):" << endl;
    
    cin.ignore(numeric_limits<streamsize>::max(), '\n'); 

    while (true) {
        cout << "Título: ";
        getline(cin, titulo);
        
        if (titulo == "*") {
            break; 
        }
        
        if (titulo == "/") {
            lineas_completas++;
            cout << "Línea completa terminada. Total de dígitos en la línea: " << digitos_en_linea << endl;
            digitos_en_linea = 0; 
        } else {
            for (char c : titulo) {
                if (isdigit(c)) {
                    digitos_en_linea++;
                }
            }
        }
    }
    
    cout << "\n--- Resultados Finales ---" << endl;
    cout << "Cantidad de líneas completas ingresadas: " << lineas_completas << endl;
    
    if (digitos_en_linea > 0) {
        cout << "(Nota: La última línea parcial contenía " << digitos_en_linea << " dígitos.)" << endl;
    }
    
    return 0;
}
