//Mayor de Dos Números

#include <iostream>
using namespace std;

int main() {
    double num1, num2;
    cout << "Ingresa el primer número: ";
    cin >> num1;
    cout << "Ingresa el segundo número: ";
    cin >> num2;
    
    if (num1 == num2) {
        cout << "Los números son iguales. Ingresa dos números diferentes." << endl;
    } else if (num1 > num2) {
        cout << "El mayor de los dos números es: " << num1 << endl;
    } else {
        cout << "El mayor de los dos números es: " << num2 << endl;
    }
    return 0;
}
