//Suma de Pares e Impares con Función es Par

#include <iostream>
using namespace std;

bool esPar(int numero) {
    return (numero % 2 == 0);
}

int main() {
    const int CANTIDAD = 10;
    int suma_pares = 0;
    int suma_impares = 0;
    
    cout << "Ingresa " << CANTIDAD << " números enteros:" << endl;
    
    for (int i = 0; i < CANTIDAD; ++i) {
        int numero;
        cout << "Número " << i + 1 << ": ";
        if (!(cin >> numero)) {
            cout << "Error en la entrada. Finalizando." << endl;
            break;
        }
        
        if (esPar(numero)) {
            suma_pares += numero;
        } else {
            suma_impares += numero;
        }
    }
    
    cout << "\n--- Resultados ---" << endl;
    cout << "Suma de todos los pares: " << suma_pares << endl;
    cout << "Suma de todos los impares: " << suma_impares << endl;
    
    return 0;
}
