//Frase Invertida

#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main() {
    string frase;
    cout << "Ingresa una frase: ";
    getline(cin, frase);
    
    reverse(frase.begin(), frase.end());
    
    cout << "\nFrase invertida: " << frase << endl;
    return 0;
}
