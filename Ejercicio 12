//Cálculo del Factorial !

#include <iostream>
using namespace std;

int main() {
    int numero;
    cout << "Ingresa un número entero positivo (incluido el 0): ";
    cin >> numero;
    
    if (numero < 0) {
        cout << "Error: Ingresa un número positivo." << endl;
        return 1;
    }
    
    long long factorial = 1; 
    
    for (int i = 1; i <= numero; ++i) {
        factorial *= i;
    }
    
    cout << "El factorial de " << numero << " es " << factorial << endl;
    return 0;
}
