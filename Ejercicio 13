//Sumatoria de Negativos y Promedio de Positivos

#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    const int CANTIDAD = 6;
    int suma_negativos = 0;
    int suma_positivos = 0;
    int contador_positivos = 0;
    
    cout << "Ingresa " << CANTIDAD << " números enteros (positivos o negativos):" << endl;
    
    for (int i = 0; i < CANTIDAD; ++i) {
        int numero;
        cout << "Número " << i + 1 << ": ";
        cin >> numero;
        
        if (numero < 0) {
            suma_negativos += numero;
        } else if (numero > 0) {
            suma_positivos += numero;
            contador_positivos++;
        }
    }
    
    double promedio_positivos = 0.0;
    if (contador_positivos > 0) {
        promedio_positivos = static_cast<double>(suma_positivos) / contador_positivos;
    }
    
    cout << "\n--- Resultados ---" << endl;
    cout << "Sumatoria de los números negativos: " << suma_negativos << endl;
    cout << fixed << setprecision(2);
    
    if (contador_positivos > 0) {
        cout << "Promedio de los números positivos: " << promedio_positivos << endl;
    } else {
        cout << "Promedio de los números positivos: No se ingresaron números positivos para calcular el promedio." << endl;
    }
    
    return 0;
}
